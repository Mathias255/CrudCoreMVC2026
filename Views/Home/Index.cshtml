@model List<CrudCoreMVC2026.Models.Usuario>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="card">
    <div class="card-header">
        <h5>Lista de Usuarios</h5>
    </div>
    <div class="card-body">
        <a class="btn btn-success btn-sm" asp-action="Usuario_Detalle" asp-controller="Home" asp-route-idUsuario="0">Crear nuevo</a>
    <hr />
        <table class="table table-striped">

            <thead>
                <tr>
                    <th>Id Usuario</th>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombrecompleto</td>
                        <td>@item.Telefono</td>
                        <td>@item.Correo</td>
                        <td>@item.oCargo.Descripcion</td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Usuario_detalle" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Usuario_eliminar" asp-controller="Home" asp-route-idUsuario="@item.IdUsuario">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
